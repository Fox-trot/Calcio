		Если НЕ ЗначениеЗаполнено(Объект.Владелец) Тогда
			Объект.Владелец	= СерверныйФункции.Футбол();
		КонецЕсли;
		ТекущийСостав.Параметры.УстановитьЗначениеПараметра("Ссылка", Неопределено);
		Если Параметры.ЗначенияЗаполнения.Свойство("Страна") Тогда
			Страны.Добавить(Параметры.ЗначенияЗаполнения.Страна);
		ИначеЕсли ТипЗнч(Параметры.Основание) = Тип("СправочникСсылка.Лига") Тогда
			Страны.Добавить(Параметры.Основание.Страна);
		ИначеЕсли ТипЗнч(Параметры.Основание) = Тип("СправочникСсылка.Чемпионаты") Тогда
			Страны.Добавить(Параметры.Основание.Владелец.Страна);
		КонецЕсли;
		Если ЗначениеЗаполнено(Страны) Тогда
			Объект.Город = ГородПодобрать(Страны.ВыгрузитьЗначения());
		КонецЕсли;
	Иначе
		Изображение	= ИзображениеПолучить(Объект.Ссылка);
		
		Если ЕстьИстория() Тогда
			Элементы.Владелец.ТолькоПросмотр	= Истина;
		КонецЕсли;
		
		Цвет		= ЦветКоманды(Объект.Ссылка);
		Элементы.Цвет.ЦветФона	= ?(ЗначениеЗаполнено(Цвет), Цвет, ЦветПустой());
	КонецЕсли;
	СерверныйФункции.СерииЗаполнить(Показатели);
	Показатели.Точки.Очистить();
	Показатели.Точки.Добавить("Всего");
