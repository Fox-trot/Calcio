&НаСервере
Процедура НаименованиеПриИзмененииНаСервере()
	Если НЕ ПустаяСтрока(Объект.Наименование) И Объект.Ссылка.Пустая() Тогда
		Если СтрНайти(Объект.Наименование, ",") > 0 Тогда
			мСлова = Разделить(Объект.Наименование, ",");
			Если мСлова.Количество() > 1 Тогда
				Объект.Наименование	= мСлова.Получить(0);
				Если СтрНайти(мСлова.Получить(1), "¶") > 0 Тогда
					Город = ГородНайти(мСлова.Получить(0));
				Иначе
					Город = ГородНайти(мСлова.Получить(1));
				КонецЕсли;
				Если ЗначениеЗаполнено(Город) Тогда
					Объект.Город		= Город;
				КонецЕсли;
			КонецЕсли;
		Иначе
			мСлова = Разделить(Объект.Наименование);
			Город = ГородНайти(мСлова.Получить(0));
			Если ЗначениеЗаполнено(Город) Тогда
				Объект.Город = Город;
			КонецЕсли;
		КонецЕсли;
	КонецЕсли;
КонецПроцедуры

