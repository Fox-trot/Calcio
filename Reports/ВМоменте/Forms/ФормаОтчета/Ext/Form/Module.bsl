&НаСервере
Процедура ГрафикОбновитьНаСервере()
	График.Очистить();

	Если ЗначениеЗаполнено(Отчет.Чемпионат) Тогда
		ДанныеПолучить();
		Если Показатель = 1 Тогда
			СерверныйФункции.СерииЗаполнить(График, Истина);
		Иначе
			
		КонецЕсли;
		Для Каждого Детали Из Отчет.Данные Цикл
			Расшифровка = Новый Структура("Команда,Количество", Детали.Команда, Детали.Количество);
			Если Показатель = 1 Тогда
				Точка = УстановитьТочку(Детали.Команда);
				График.УстановитьЗначение(Точка, 0, Детали.КоличествоЗабито, Расшифровка);
				График.УстановитьЗначение(Точка, 1, Детали.КоличествоПропущено, Расшифровка);
			Иначе
				Серия = УстановитьСерию(Детали.Команда);
				График.УстановитьЗначение(График.УстановитьТочку("Количество матчей"), Серия, Детали.Количество, Расшифровка);
				График.УстановитьЗначение(График.УстановитьТочку("Количество очков"), Серия, Детали.КоличествоОчков, Расшифровка);
			КонецЕсли;
		КонецЦикла;
	КонецЕсли;
КонецПроцедуры

